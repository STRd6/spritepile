*
  box-sizing: border-box;

body, html
  height: 100%

.item
  width: 40px;
  height: 40px;
  border: 4px solid #333;
  border-color: hsla(0, 0%, 0%, 0.3);

.item:hover
  border-color: white;
  cursor: move;

.item.is-dragging,
.item.is-positioning-post-drag
  border-color: white;
  background: #09F;
  z-index: 2;
