*
  box-sizing: border-box;

body, html
  height: 100%
  margin: 0

body
  background-color: hsla(0, 0%, 0%, 0.3)

.item
  border: 4px solid transparent
  width: 40px
  height: 40px

.item:hover
  border-color: white
  cursor: move

.item.is-dragging,
.item.is-positioning-post-drag
  border-color: white
  background: #09F
  z-index: 2
